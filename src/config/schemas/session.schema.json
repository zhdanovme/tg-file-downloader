{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tg-downloader/schemas/session.json",
  "title": "SessionFile",
  "description": "Telegram session file schema",
  "type": "object",
  "required": ["version", "createdAt", "lastUsedAt", "sessionString"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version (semver format)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp when session was created",
      "format": "date-time"
    },
    "lastUsedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of last use",
      "format": "date-time"
    },
    "sessionString": {
      "type": "string",
      "description": "Telegram StringSession (base64 encoded)",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9+/]+=*$"
    },
    "userId": {
      "type": "string",
      "description": "User ID if authenticated"
    },
    "phoneNumber": {
      "type": "string",
      "description": "Phone number used for auth (masked for security)",
      "pattern": "^\\+?[0-9*]+$"
    }
  },
  "additionalProperties": false
}
